<?xml version="1.0" encoding="utf-8" ?>
<resources>
    <declare-styleable name="AppTheme">
        <attr name="PrimaryAccentColor" format="color" />
        <attr name="PrimaryAccentTextColor" format="color" />
    </declare-styleable>  
    <!-- Base theme applied regardless of API level -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/accentColor</item>
        <item name="colorControlNormal">@color/primaryColor</item>
        <item name="colorControlActivated">@color/accentColor</item>
        <item name="colorControlHighlight">@color/accentColor</item>
        <item name="windowActionModeOverlay">false</item>

        <item name="PrimaryAccentColor">#C5F12C</item>
        <item name="PrimaryAccentTextColor">#313842</item>
    </style>

    <!-- Default App theme applied if no resource style overrides for specific API level -->
    <style name="AppTheme" parent="AppTheme.Base">
    </style>

    <!-- App Splash Screen Theme -->
    <style name="AppTheme.Splash.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <!-- Default Splash Screen theme applied if no resource style overrides for specific API level -->
    <style name="AppTheme.Splash" parent="AppTheme.Splash.Base">
    </style>

    <style name="MenuTextAppearance">
        <item name="android:textSize">30sp</item>
        <item name="colorPrimary">?attr/PrimaryAccentTextColor</item>
        <item name="colorControlHighlight">?attr/PrimaryAccentColor</item>
    </style>
</resources>
